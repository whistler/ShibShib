<div class="row">
  <div class="span8">
    <%= link_to image_tag(post.image.url(:large), :class => 'displayed', :alt => post.title), post %>
    </div>

    <div class="span3 well center">
      <h2><%= post.title %></h2><br/>
      <i class="icon-user"></i>
      <% if post.user == nil then %>
        Anonymous
      <% else %>
        <%= link_to post.user.name, user_path(post.user) %>
      <% end %>
      <br/>
      <!-- the below line is needed for Arabic alginment -->
      <i style="visibility:hidden;" ><%= "#{t 'post.fake'}" %></i>

      <i class="icon-time"></i>
      <%= "#{distance_of_time_in_words(Time.now, post.created_at)} #{t 'post.ago'}" %> | 
      <i class="icon-comment"></i>
          <fb:comments-count href="http://shibshib.me/posts/<%= post.id %>"></fb:comments-count>
      <div class="small-break"></div>

      <% if(post.plusminus == 0)
        nlikes = "#{t 'post.no_likes'}"
      elsif(post.plusminus == 1) 
        likes = "#{t 'post.one_like'}"
      elsif(post.plusminus == 2)
        likes = "#{t 'post.two_likes'}"
      elsif(@user.posts.count > 2 && @user.posts.count < 11)
        nlikes = "#{post.plusminus.to_s}"
        likes = " #{t 'post.three_to_ten_likes'} "
      else
        nlikes = "#{post.plusminus.to_s}"
        likes = " #{t 'post.many_likes'} "
      end %>

      <br/>
      
      <ul class='shareLinks' id="shares<%= post.id %>">
        <li>
        <%= link_to ({:controller=> 'posts', :action=>'vote', :post_id => post.id}), :remote => true do %>
          <span class="btn btn-mini"><i class="icon-heart"></i> <i style="visibility:hidden;" ><%= "#{t 'post.fake'}" %></i><span id="votes-<%= post.id %>"><%= nlikes %></span><span><%= likes %></span></span>
        <% end %>
        </li>

        <!-- Tweeter -->
        <li>
        <div class="tweet">
        <a target="_blank" href="http://twitter.com/share" class="twitter-share-button" data-url="<%= post_url(post)%>" data-text="<%= post.title %>" data-count="none" data-via="shibshib" data-hashtags="shibshib">Tweet</a>
        </div>
        <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
        </li>

        <!-- Facebook -->
        <li>
        <div class="fb-like" data-href="<%= post_url(post)%>" data-send="true" data-layout="button_count" data-width="100" data-show-faces="false" data-font="tahoma" send="false"></div>
        </li>
        
      </ul>

  </div><!-- end of well -->
</div>
<hr>
