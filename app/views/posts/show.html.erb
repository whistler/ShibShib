<div class="well">
  <h1><%= @post.title %></h1>

    <i class="icon-user"></i>
    <% if @post.user == nil then %>
      Anonymous
    <% else %>
      <%= link_to @post.user.name, user_path(@post.user) %>
    <% end %> |
    <!-- the below line is needed for Arabic alginment -->
    <i style="visibility:hidden;" ><%= "#{t 'post.fake'}" %></i>
    
    <i class="icon-time"></i>
    <%= "#{distance_of_time_in_words(Time.now, @post.created_at)} #{t 'post.ago'}" %> |

    <i class="icon-comment"></i>
    <fb:comments-count href="http://shibshib.me/posts/<%= @post.id %>"></fb:comments-count>
    <%= t 'post.many_comments' %> |

    <i class="icon-heart"></i>
    <%= @post.plusminus.to_s %> <%= t 'post.many_likes' %>
    <br/>
    <% if ((user_signed_in?) && (current_user.id == @post.user_id)) then %>
      <br/>
      <div class="btn-group small-break">
        <a class="btn btn-mini" href=" <%= edit_post_path(@post) %> ">
          <i class="icon-edit"></i>
          <%= t 'general.edit' %>
        </a>

        <a class="btn btn-mini" href=" <%= @post %> " data-method="delete" data-confirm="<%= %-#{t 'general.delete_cnfrm'}- %>">
          <i class="icon-remove"></i>
          <%= t 'general.delete' %>
        </a>
      </div>
    <% else %>
      <a href = "<%= post_path(@post) %>/mark_inappropriate" class="report"><%= t 'post.report' %></a>
    <% end %>

</div><!-- end of 1st well -->

<%= image_tag @post.image.url(:large), :class=>'displayed', :alt => @post.title %>

<div class="well">

  <span id="votes-<%= @post.id %>">
    <% if(@post.plusminus == 0)
      likes = "#{t 'post.no_likes'}"
    elsif(@post.plusminus == 1)
      likes = "#{t 'post.one_like'}"
    elsif(@post.plusminus > 1 || @post.plusminus < 11)
      likes = "#{@post.plusminus.to_s} #{t 'post.three_to_ten_likes'}"
    else
      likes = "#{@post.plusminus.to_s} #{t 'post.many_likes'}"
    end %>
    
    <div class="row offset2">
      <ul class='shareLinks'>
    
      <li>
        <!-- Vote Up -->
        <div id="vote-up">
        <%= link_to ({:controller=> 'posts', :action=>'vote', :post_id => @post.id, :remote => true}) do %>
        <span class="btn btn-mini"><i class="icon-heart"></i> <%= likes %></span>
        <% end %>
        </div>
      </li>
    
      <li>
      <!-- Tweeter -->
      <a target="_blank" href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-url="<%= post_url(@post)%>" data-text="<%= @post.title %>" data-count="vertical" data-via="shibshib" data-hashtags="shibshib">Tweet</a>
      <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
      </li>

      <!-- Facebook -->
      <li>
      <div class="fb-like" data-href="<%= post_url(@post)%>" data-send="true" data-layout="button_count" data-width="100" data-show-faces="false" data-font="tahoma" send="false"></div>
      </li>
    </div>
    
      <div class="small-break"></div>
  <hr>

  <div id="comments" class="comments">
    <div class="fb-comments" data-href="http://shibshib.me/posts/<%= @post.id %>" data-num-posts="3" data-width="470"></div>
  </div>

</div><!-- end of 2nd well -->
