<% if params[:locale] == 'ar'
     @lang = "ar_AR"
     @tlang = "ar"
   else
     @lang = "en_US"
     @tlang = "en"
   end %>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="nav-collapse">        

        &nbsp&nbsp&nbsp<a href="https://twitter.com/shibshibme" class="twitter-follow-button" data-show-count="false" data-lang="<%= @tlang %>" data-size="large">Follow</a>
<script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
        <fb:fan profile_id="374637662568823" stream="0" connections="1" width="220px" height="61px" header="0" logobar="0" css="/assets/shibshib.css"></fb:fan>

        <!-- http://shibshib.me/assets/shibshib.css -->
        <ul class="nav pull-right">
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t 'footer.language' %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "العربية", :locale=>'ar' %></li>
            <li><%= link_to "English", :locale=>'en' %></li>
          </ul>
          </li>
          <% if user_signed_in? then %>
          <li><%= link_to "#{t 'header.new_post'}", new_post_path %></li>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_user.name %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to user_path(current_user) do %><i class="icon-user"></i> <%= "#{t 'header.profile'}" %><% end %></li>
            <li><%= link_to edit_user_path(current_user) do %><i class="icon-cog"></i> <%= "#{t 'header.settings'}" %><% end %></li>
            <% if current_user.is_admin? then %>
            <li class="divider"></li>
            <li><%= link_to rails_admin_path do %><i class="icon-star"></i> <%= "#{t 'header.admin_panel'}" %><% end %></li><% end %>
            <li class="divider"></li>
            <li><%= link_to destroy_user_session_path, :method => :delete do %><i class="icon-off"></i> <%= "#{t 'header.sign_out'}" %><% end %></li>
            </ul>
          </li>

          <% else %>
          <li><%= link_to "#{t 'header.login'}", new_user_session_path %></li>
          <li><%= link_to "#{t 'header.sign_up'}", new_user_registration_path %></li>
          <% end %>
          <li><%= link_to "#{t 'header.home'}", root_path %></li>
          <%= link_to root_path do %>
          <%= image_tag("shibshib.png", :alt => "logo", :class => "brand shibshib-logo", :style=>"margin:0; padding:0") %>
          <% end %>&nbsp&nbsp&nbsp
          </ul>

      </div><!--/.nav-collapse -->

  </div>
</div>
