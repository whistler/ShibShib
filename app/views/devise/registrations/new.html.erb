<% @title = "#{t 'registrations.sign_up'}" %>
<% if params[:locale] == 'ar'
     @lang = "ar_AR"
     @tlang = "ar"
   else
     @lang = "en_US"
     @tlang = "en"
   end %>
<div class="row"><br/>
  <div class="span1">&nbsp</div>

  <div class="span5">
    <h2><%= t 'registrations.sign_up' %></h2>
    <br /><br />
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.label "#{t 'registrations.name'}" %> <%= f.text_field :name %>
    <%= f.label "#{t 'registrations.email'}" %> <%= f.email_field :email %>
    <%= f.label "#{t 'registrations.password'}" %> <%= f.password_field :password %>
    <%= f.label "#{t 'registrations.password_confirm'}" %> <%= f.password_field :password_confirmation %>
    <br /><br />
    <%= f.submit "#{t 'registrations.sign_up_btn'}", :class=>"btn btn-medium"%>
    <% end %>
  </div>

  <div class="span5">
    <%= render :partial => "devise/shared/links" %>
  </div>

</div>
