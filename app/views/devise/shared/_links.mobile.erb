
<br /><br />
<%- if controller_name != 'sessions' %>
  <a href="<%= new_session_path(resource_name) %>" data-role="button" data-theme="a" ><%= t 'registrations.sign_in_btn' %></a>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <a href="<%= new_registration_path(resource_name) %>" data-role="button" data-theme="a" ><%= t 'registrations.sign_up_btn' %></a>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <a href="<%= new_password_path(resource_name) %>" data-role="button" data-theme="a" ><%= t 'registrations.reset_password' %></a>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class=>"btn btn-medium", "data-theme"=>"b"%>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class=>"btn btn-medium", "data-theme"=>"b" %>
<% end -%>
