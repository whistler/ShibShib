<div class="row">
  <div class="span4">&nbsp;</div>
  <div class="span4 well">
  <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if (action_name == "edit") %>
        <h2><%= t 'user.settings' %></h2>
  <% end %>
  <br /><br />

  <%= f.label "#{t 'registrations.name'}" %> <%= f.text_field :name %>
  <%= f.label "#{t 'registrations.email'}" %> <%= f.text_field :email %>

  <br /><br />

  <%= f.submit "#{t 'general.update'}", :class=>"btn btn-medium" %>
<% end %>
</div>
