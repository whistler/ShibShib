<div class="well">
  <div>
  <h1><%= @user.name %></h1>
  </div>
  <i class="icon-pencil"></i> <%= @user.posts.count %> posts |
  <b>Other meaningful statics worth to show: </b>
  <i class="icon-heart"></i> # of likes earned | # of tweets | # of shares | # of comments
</div>
<% @posts.each do |a_post| %>
<%= render :partial => "posts/posts_list", :locals => {:post => a_post} %>
<% end %>
<%= will_paginate(@posts, :more => true) %>
<p id="back-top"><a href="#top"><span></span><%= t 'others.back_to_top' %></a></P>
